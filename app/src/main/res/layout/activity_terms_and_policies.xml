<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aquar.myaquar_egypt.Activity.about_us">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/terms_and_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Terms and policies"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/name_of_terms_and_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_gravity="left"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:text="Terms and policies"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/Red" />

    <TextView
        android:id="@+id/about_us_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:text="@string/Terms_policies"
        android:textSize="20sp"
        android:textColor="#000" />

</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aquar.myaquar_egypt.Activity.AboutUs">

    <TextView
        android:id="@+id/terms_and_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Terms and policies"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <TextView
        android:id="@+id/name_of_terms_and_policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/terms_and_policies"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:text="Terms and policies"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Red" />

    <TextView

        android:id="@+id/text_of_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:textColor="#000" />

</RelativeLayout>

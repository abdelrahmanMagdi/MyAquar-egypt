<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
android:layout_weight="0"
            >

            <ImageView
                android:id="@+id/image_one_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                />
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/type_of_project_one_two"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="18dp"
        android:text="LIFE PARKEL SHROUK"
        android:layout_marginTop="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <RatingBar
        android:id="@+id/ratingbar_one_two"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="start|left"
        android:theme="@style/Theme.Rating"
        android:numStars="4"
        android:layout_marginTop="-12dp"
        android:layout_marginLeft="-55dp"
        android:scaleX="0.3"
        android:scaleY="0.3" />
    <LinearLayout
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_home_one_two"
        android:text="1,200,000"
        android:textSize="17dp"
        android:textColor="#000"

        />

        <TextView
            android:paddingLeft="15dp"
            android:text="EGP"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView

        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="10dp"
        />


    <TextView
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 YEARS"
        android:id="@+id/number_Of_year_one_two"
        android:textColor="#000"
        android:textSize="17dp"
        />
<TextView
    android:paddingLeft="10dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="10dp"
    android:text="instaliments"
    />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="bottom"

        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:src="@drawable/ic_share_black_24dp"

            android:id="@+id/share_id_home_one_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|left|center"
          android:layout_marginLeft="10dp"
            />

        <ImageView

            android:id="@+id/love_id_home_one_two"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_gravity="end|left|center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_favorite_normal_black_24dp" />

    </LinearLayout>


</LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:layout_weight="0"

            >

////////////////////////////////////////////////////////////

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/cardview_light_background"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/type_of_project_two_three"

                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:text="LIFE PARKEL SHROUK"
                    android:layout_marginTop="5dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <RatingBar
                    android:layout_marginTop="-12dp"
                    android:id="@+id/ratingbar_two_one"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:theme="@style/Theme.Rating"
                    android:layout_gravity="start|left"
                    android:numStars="4"
                    android:layout_marginLeft="-55dp"
                    android:scaleX="0.3"
                    android:scaleY="0.3" />
                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/price_home_two_three"
                        android:text="1,200,000"
                        android:textSize="17dp"
                        android:textColor="#000"

                        />

                    <TextView

                        android:paddingLeft="15dp"
                        android:text="EGP"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:paddingLeft="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textSize="10dp"
                    />


                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 YEARS"
                    android:id="@+id/number_Of_year_two_three"
                    android:textColor="#000"
                    android:textSize="17dp"
                    />
                <TextView
                    android:paddingLeft="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="instaliments"
                    />


                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="bottom"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/share_id_home_two_three"
android:src="@drawable/ic_share_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|left|center"
                        android:layout_marginLeft="10dp"
                        />

                    <ImageView

                        android:id="@+id/love_id_home_two_three"
android:src="@drawable/ic_favorite_normal_black_24dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|left|center"

                        />

                </LinearLayout>


                ////////////////////////////


            </LinearLayout>

            <ImageView
                android:id="@+id/image_two_four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                />
///////////////////////////

    </LinearLayout>

    </LinearLayout>
</LinearLayout>